<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.GADS.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/dashboard_card_corner_radius</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable"> true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Widget.GADS.ImageCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/dashboard_card_corner_radius</item>
    </style>

    <style name="Theme.Leadersboard.DarkActionBar" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorButtonNormal">?attr/colorOnPrimary</item>
    </style>

</resources>